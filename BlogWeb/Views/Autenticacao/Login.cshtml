@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login - Resenha Cultural</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/estilo.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <main id="login-form">
            <h2>Resenha Cultural - Login</h2>
            <p>@Html.ValidationSummary()</p>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(l => l.LoginName)
                    @Html.TextBoxFor(l => l.LoginName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(l => l.Password)
                    @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
                </div>

                <button class="btn btn-primary">Login</button>
            }
            <p>Não tem acesso? @Html.ActionLink("Registre-se", "Registro") aqui!</p>
        </main>
    </div>
</body>
</html>

